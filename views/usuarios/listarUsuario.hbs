<h1 class="mb-4">Lista de Usuarios</h1>

<div class="table-responsive">
  <table class="table table-striped table-hover table-bordered">
    <thead class="thead-light">
      <tr>
        <th>Usuario</th>
        <th>Correo</th>
        <th>Rol</th>
        <th>Estado</th>
        <th>Acciones</th>
      </tr>
    </thead>
    <tbody>
      {{#each usuarios}}
      <tr>
        <td>{{this.usuario}}</td>
        <td>{{this.correo}}</td>
        <td>{{this.rol.descripcion}}</td>
        <td>
          {{#if (eq this.estado.descripcion "Activo")}}
            <span class="badge badge-success">{{this.estado.descripcion}}</span>
          {{else}}
            <span class="badge badge-danger">{{this.estado.descripcion}}</span>
          {{/if}}
        </td>
        <td>
          <a href="/usuarios/{{this.id}}" class="btn btn-sm btn-warning">Editar</a>
          <form action="/usuarios/{{this.id}}?_method=DELETE" method="POST" class="d-inline">
            <button type="submit" class="btn btn-sm btn-danger">Eliminar</button>
          </form>
        </td>
      </tr>
      {{/each}}
    </tbody>
  </table>
</div>

<div class="text-right">
  <a href="/usuarios/nuevo" class="btn btn-success">Crear nuevo Usuario</a>
</div>