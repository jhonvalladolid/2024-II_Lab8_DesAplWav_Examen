<!-- Formulario de reserva -->
<section class="bg-white py-5">
  <div class="container">
    <div class="row">
      <div class="col-lg-6 mx-auto">
        <form>
          <div class="form-row">
            <div class="col-md-6">
              <label for="pickup-location">Lugar de recogida</label>
              <input type="text" class="form-control" id="pickup-location" placeholder="Ubicación de recogida">
            </div>
            <div class="col-md-6">
              <label for="dropoff-location">Lugar de entrega</label>
              <input type="text" class="form-control" id="dropoff-location" placeholder="Ubicación de entrega">
            </div>
          </div>
          <div class="form-row mt-3">
            <div class="col-md-6">
              <label for="pickup-date">Fecha de recogida</label>
              <input type="date" class="form-control" id="pickup-date">
            </div>
            <div class="col-md-6">
              <label for="dropoff-date">Fecha de entrega</label>
              <input type="date" class="form-control" id="dropoff-date">
            </div>
          </div>
          <button type="submit" class="btn btn-primary mt-4 btn-block">Buscar Vehículos</button>
        </form>
      </div>
    </div>
  </div>
</section>

