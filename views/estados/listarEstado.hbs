<h1 class="mb-4 text-center">Lista de Estados</h1>

<!-- Tabla de Estados con estilo Bootstrap -->
<div class="table-responsive">
  <table class="table table-hover table-bordered text-center">
    <thead class="thead-light">
      <tr>
        <th scope="col">#</th>
        <th scope="col">Descripción del Estado</th>
        <th scope="col">Acciones</th>
      </tr>
    </thead>
    <tbody>
      {{#each estados}}
      <tr>
        <th scope="row">{{@index}}</th>
        <td>{{this.descripcion}}</td>
        <td>
          <a href="/estados/{{this.id}}" class="btn btn-sm btn-warning">Editar</a>
          <form action="/estados/{{this.id}}?_method=DELETE" method="POST" class="d-inline">
            <button type="submit" class="btn btn-sm btn-danger">Eliminar</button>
          </form>
        </td>
      </tr>
      {{/each}}
    </tbody>
  </table>
</div>

<!-- Botón para crear nuevo estado -->
<div class="text-right">
  <a href="/estados/nuevo" class="btn btn-success">Crear nuevo Estado</a>
</div>
