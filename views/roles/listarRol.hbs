<h1 class="mb-4">Lista de Roles</h1>

<ul class="list-group mb-4">
  {{#each roles}}
    <li class="list-group-item">
      <strong>Rol:</strong> {{this.descripcion}} <br>
      <a href="/roles/{{this.id}}" class="btn btn-sm btn-warning">Editar</a>
      <form action="/roles/{{this.id}}?_method=DELETE" method="POST" class="d-inline">
        <button type="submit" class="btn btn-sm btn-danger">Eliminar</button>
      </form>
    </li>
  {{/each}}
</ul>

<a href="/roles/nuevo" class="btn btn-success">Crear nuevo Rol</a>
