<h1 class="mb-4 text-center">Lista de Roles</h1>

<div class="table-responsive">
  <table class="table table-striped table-hover table-bordered">
    <thead class="thead-light">
      <tr>
        <th>Rol</th>
        <th>Acciones</th>
      </tr>
    </thead>
    <tbody>
      {{#each roles}}
      <tr>
        <td>{{this.descripcion}}</td>
        <td>
          <a href="/roles/{{this.id}}" class="btn btn-sm btn-warning">Editar</a>
          <form action="/roles/{{this.id}}?_method=DELETE" method="POST" class="d-inline"
            onsubmit="event.preventDefault(); confirmDelete({{this.id}}, 'roles');">
            <button type="submit" class="btn btn-sm btn-danger">Eliminar</button>
          </form>
        </td>
      </tr>
      {{/each}}
    </tbody>
  </table>
</div>

<div class="text-right">
  <a href="/roles/nuevo" class="btn btn-success">Crear nuevo Rol</a>
</div>